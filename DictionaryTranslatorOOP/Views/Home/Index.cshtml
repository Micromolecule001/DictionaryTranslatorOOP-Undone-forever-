@{
    ViewData["Title"] = "Home Page";
}
<head>

    <title>Словник-перекладач</title>

    <style>
        body {
            text-align: center;
            font-family: Arial, sans-serif;
        }

        h1 {
            margin-top: 100px;
        }

        #translation-input {
            width: 300px;
            padding: 10px;
            font-size: 16px;
        }

        #translate-button {
            padding: 10px 20px;
            font-size: 16px;
            background-color: #007bff;
            color: #fff;
            border: none;
            cursor: pointer;
        }

        #translation-output {
            margin-top: 20px;
            font-size: 18px;
        }
    </style>
</head>

<body>
    <h1>Слоник-перекладач</h1>
    <input type="text" id="translation-input" placeholder="Введіть слово для перекладу">
    <button id="translate-button">Перекласти</button>
    <div id="translation-output"></div>
</body>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#translate-button").click(function () {
            alert("called");
            var textToTranslate = $("#translation-input").val();
            $.post("/Controllers/UserController", { text: textToTranslate }, function (data) {
                $("#translation-output").text(data);
            });
        });
    });
</script>






